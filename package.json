{
  "name": "rollup-plugin-handlebarsjs",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.11.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hywax/rollup-plugin-handlebarsjs.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "types": "./types/index.d.ts",
    "import": "./dist/es.js",
    "default": "./dist/cjs.js"
  },
  "main": "./dist/cjs.js",
  "module": "./dist/es.js",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "rollup -c",
    "release": "pnpm build && changelogen --release --push && pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky"
  },
  "peerDependencies": {
    "rollup": "^1.20.0||^2.0.0||^3.0.0||^4.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.1.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/node": "^22.5.5",
    "changelogen": "^0.5.7",
    "eslint": "^9.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
